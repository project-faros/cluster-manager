#
# Faros DNS Configuration File
#
# !! DO NOT EDIT THIS FILE !!
# To customize the DNS server, make changes to /etc/named.custom.conf
# Changes made to this file may be overwritten by the farosctl command.
#

options {
    listen-on           port 53 { {{ dns_server_ip }}; 127.0.0.1; };
    directory           "/var/named";
    dump-file           "/var/named/data/cache_dump.db";
    statistics-file     "/var/named/data/named_stats.txt";
    memstatistics-file  "/var/named/data/named_mem_stats.txt";
    allow-query         { any; };
    recursion           yes;
};

logging {
    channel default_debug {
        file        "data/named.run";
        severity    dynamic;
    };
};

zone "{{ dns_server_domain }}." {
    type master;
    file "zone.{{ dns_server_domain }}";
};

zone "{{ dns_server_reverse_domain }}." {
    type master;
    file "zone.{{ dns_server_reverse_domain }}";
};

include "/etc/named.custom.conf";
